@model IEnumerable<BasicInventoryManagementSystem.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h2>Product List</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Add New Product</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Category</th>  <!-- Changed from CategoryId to Category -->
            <th>Price</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.CategoryName</td> <!-- This will show the category name -->
                <td>@product.Price.ToString("C")</td>
                <td>@product.Quantity</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
