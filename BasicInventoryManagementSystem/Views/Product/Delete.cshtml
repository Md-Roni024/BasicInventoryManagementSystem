@model BasicInventoryManagementSystem.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm" style="background-color: #f8f9fa;">
                <div class="card-header bg-danger text-white text-center">
                    <h4>Delete Product</h4>
                </div>
                <div class="card-body text-center">
                    <h5>Are you sure you want to delete this product?</h5>
                    <h6 class="mb-4">@Model.Name</h6>

                    <dl class="row">
                        <dt class="col-sm-5">Category:</dt>
                        <dd class="col-sm-7">@Model.CategoryName</dd>
                        <dt class="col-sm-5">Quantity:</dt>
                        <dd class="col-sm-7">@Model.Quantity</dd>
                        <dt class="col-sm-5">Price:</dt>
                        <dd class="col-sm-7">@String.Format("{0:C}", Model.Price)</dd>
                    </dl>

                    <form id="deleteForm" asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger mr-2">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                    <div id="confirmationMessage" class="mt-3" style="display: none;">
                        <div class="alert alert-success" role="alert">
                            Product deleted successfully!
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
