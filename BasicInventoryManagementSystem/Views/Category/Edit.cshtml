@model BasicInventoryManagementSystem.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm" style="background-color:#eeeeee;">
                <div class="card-header bg-secondary text-white text-center">
                    <h2>Edit Category</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div> 

                        <div class="mb-3">
                            <label asp-for="CategoryName" class="form-label"></label>
                            <input asp-for="CategoryName" class="form-control" placeholder="Enter category name" />
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label>Created Date</label>
                            <p>@Model.CreatedDate.ToString("g")</p> 
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary w-100">Save</button>
                        </div>
                    </form>

                    <p class="mt-3 text-center">
                        <a asp-action="Index" class="text-primary">Back to List</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
