@model IEnumerable<BasicInventoryManagementSystem.Models.Category>

@{
    ViewData["Title"] = "Category List";
}

<h2>Category List</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Add New Category</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Category Name</th>
            <th>Created Date</th>
            <th>Updated Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.CategoryName</td>
                <td>@category.CreatedDate.ToString("g")</td>
                <td>@category.UpdatedDate.ToString("g")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
