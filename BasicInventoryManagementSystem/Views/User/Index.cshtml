@model IEnumerable<BasicInventoryManagementSystem.Models.User>

@{
    ViewData["Title"] = "User List";
}

<style>
    .table td, .table th {
        text-align: center;
    }

    /* Add horizontal lines between rows */
    .table tbody tr {
        border-bottom: 2px solid #dadada; /* Bootstrap's default border color */
    }

    /* Add border to the entire table */
    .table {
        border: 2px solid #dadada; /* Customize the border color as needed */
        border-radius: 0.25rem; /* Optional: Rounded corners */
    }

    /* Border for the table header */
    .table thead th {
        border-bottom: 1.5px solid #dadada; /* Change the border color to gray */
    }
</style>

<div class="d-flex justify-content-between mb-3">
    <h4>User List</h4>
    <div class="d-flex justify-content-between gap-3">
        <a asp-action="Register" class="btn btn-primary btn-sm">Create New User</a>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Created Date</th>
            <th scope="col">Actions</th>
            <th scope="col">User Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.CreatedDate.ToString("g")</td>
                <td>
                    <a asp-action="AssignRole" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Assign Roles</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
                <td>@ViewBag.UserRoles[user.Id]</td>
            </tr>
        }
    </tbody>
</table>
