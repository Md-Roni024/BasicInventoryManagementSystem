@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="container-fluid p-0">
    <div class="hero-image d-flex align-items-center justify-content-center">
        <div class="text-center text-white">
            <h1 class="display-3 font-weight-bold">Basic Inventory Management System</h1>
            <p class="lead">Efficiently manage your products, sales, and reports.</p>
            <a class="btn btn-light btn-lg rounded-pill px-4 mt-3" href="#" role="button">Get Started</a>
        </div>
    </div>
</div>

<!-- Features Section -->
<section class="container my-5">
    <div class="text-center mb-5">
        <h2 class="font-weight-bold">Key Features</h2>
        <p class="text-muted">Streamline your inventory with these powerful tools</p>
    </div>

    <div class="row">
        <!-- Feature 1: Manage Products -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm text-center p-4">
                <div class="mb-4">
                    <i class="fas fa-box fa-4x text-primary"></i>
                </div>
                <h5 class="card-title font-weight-bold">Manage Products</h5>
                <p class="card-text text-muted">Easily add, update, and track your inventory products in one place.</p>
            </div>
        </div>

        <!-- Feature 2: Track Sales -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm text-center p-4">
                <div class="mb-4">
                    <i class="fas fa-shopping-cart fa-4x text-success"></i>
                </div>
                <h5 class="card-title font-weight-bold">Track Sales</h5>
                <p class="card-text text-muted">Stay on top of your sales with real-time updates and detailed reports.</p>
            </div>
        </div>

        <!-- Feature 3: Generate Reports -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm text-center p-4">
                <div class="mb-4">
                    <i class="fas fa-chart-line fa-4x text-warning"></i>
                </div>
                <h5 class="card-title font-weight-bold">Generate Reports</h5>
                <p class="card-text text-muted">Access detailed performance reports on your inventory and sales.</p>
            </div>
        </div>
    </div>
</section>


<!-- Styles -->
<style>
    .hero-image {
        background-image: url('/resource/hero-background.jpg'); /* Adjust the path to your hero image in the resource folder */
        background-size: cover;
        background-position: center;
        height: 100vh;
        position: relative;
    }

        .hero-image::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
        }

        .hero-image .text-center {
            z-index: 1;
        }

    .card {
        border-radius: 15px;
    }

        .card:hover {
            transform: translateY(-5px);
            transition: 0.3s ease-in-out;
        }

    h1, h2, h3, h5 {
        font-family: 'Poppins', sans-serif;
    }

    p {
        font-family: 'Roboto', sans-serif;
    }

    .btn-lg {
        font-size: 1.2rem;
    }

    .bg-light {
        background-color: #f8f9fa !important;
    }
</style>
