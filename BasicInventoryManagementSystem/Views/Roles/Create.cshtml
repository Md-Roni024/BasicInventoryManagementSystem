@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Create Role";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm" style="background-color:#eeeeee;">
                <div class="card-header bg-secondary text-white text-center">
                    <h2>Create Role</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">Role Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter role name" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Create</button>
                    </form>

                    <p class="mt-3 text-center">
                        <a asp-action="Index" class="text-primary">Back to List</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
