@{
    ViewData["Title"] = "Create Role";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm" style="background-color: #eeeeee;">
                <div class="card-header bg-secondary text-white text-center">
                    <h2>Create Role</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="form-group mb-3">
                            <label for="roleName" class="form-label">Role Name</label>
                            <input type="text" class="form-control" id="roleName" name="roleName" required placeholder="Enter role name" />
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Create</button>
                    </form>

                    <p class="mt-3 text-center">
                        <a asp-action="Index" class="text-primary">Back to List</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
