@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Delete Role";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm" style="background-color: #f8f9fa;">
                <div class="card-header bg-danger text-white text-center">
                    <h4>Delete Role</h4>
                </div>
                <div class="card-body text-center">
                    <h5>Are you sure you want to delete this role?</h5>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-5">
                            Role Name
                        </dt>
                        <dd class="col-sm-7">
                            <strong>@Model.Name</strong>
                        </dd>
                    </dl>

                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger mr-2">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </form>

                    <div id="confirmationMessage" class="mt-3" style="display: none;">
                        <div class="alert alert-success" role="alert">
                            Role deleted successfully!
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
