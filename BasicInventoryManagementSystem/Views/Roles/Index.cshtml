@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Roles List";
}

<style>
    .table td, .table th {
        text-align: center;
    }

    .table tbody tr {
        border-bottom: 2px solid #dadada; 
    }

    .table {
        border: 2px solid #dadada;
        border-radius: 0.25rem; 
    }
    .table thead th {
        border-bottom: 1.5px solid #dadada;
            background-color: #acc3e8
    }
</style>

<div class="d-flex justify-content-between mb-3">
    <h4>Roles List</h4>
    <div class="d-flex justify-content-between gap-3">
        <a href="@Url.Action("Create", "Roles")" class="btn btn-primary btn-sm">Create Role</a>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Role Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Roles", new { id = role.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", "Roles", new { id = role.Id })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
