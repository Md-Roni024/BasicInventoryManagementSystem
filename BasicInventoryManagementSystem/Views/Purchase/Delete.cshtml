@model BasicInventoryManagementSystem.Models.Purchase

@{
    ViewData["Title"] = "Delete Purchase";
}

<h1>Delete Purchase</h1>
<hr />
<div>
    <h4>Are you sure you want to delete this purchase?</h4>
    <div>
        <strong>Product:</strong> @Model.Product.Name<br />
        <strong>Quantity:</strong> @Model.Quantity<br />
        <strong>Price:</strong> @Model.Price<br />
        <strong>Supplier:</strong> @Model.Supplier<br />
        <strong>Date:</strong> @Model.PurchaseDate.ToShortDateString()
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div>
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
