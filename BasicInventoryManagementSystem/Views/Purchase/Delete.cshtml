@model BasicInventoryManagementSystem.Models.Purchase

@{
    ViewData["Title"] = "Delete Purchase";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm" style="background-color: #f8f9fa;">
                <div class="card-header bg-danger text-white text-center">
                    <h4>Delete Purchase</h4>
                </div>
                <div class="card-body text-center">
                    <h5>Are you sure you want to delete this purchase?</h5>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-5">
                            Product
                        </dt>
                        <dd class="col-sm-7">
                            @Model.Product?.Name
                        </dd>
                        <dt class="col-sm-5">
                            Quantity
                        </dt>
                        <dd class="col-sm-7">
                            @Model.Quantity
                        </dd>
                        <dt class="col-sm-5">
                            Price
                        </dt>
                        <dd class="col-sm-7">
                            @Model.Price.ToString("C")
                        </dd>
                        <dt class="col-sm-5">
                            Supplier
                        </dt>
                        <dd class="col-sm-7">
                            @Model.Supplier
                        </dd>
                    </dl>

                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger mr-2">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </form>

                    <!-- Optional Confirmation Message -->
                    <div id="confirmationMessage" class="mt-3" style="display: none;">
                        <div class="alert alert-success" role="alert">
                            Purchase deleted successfully!
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
