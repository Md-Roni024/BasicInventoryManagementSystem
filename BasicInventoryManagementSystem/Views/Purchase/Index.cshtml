@model IEnumerable<BasicInventoryManagementSystem.Models.Purchase>

@{
    ViewData["Title"] = "Purchases List";
}

<h1>Purchases</h1>
<a asp-action="Create" class="btn btn-primary mb-3">Create New Purchase</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Supplier</th>
            <th>Created Date</th>
            <th>Updated Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var purchase in Model)
        {
            <tr>
                <td>@purchase.Product?.Name</td>
                <td>@purchase.Quantity</td>
                <td>@purchase.Price.ToString("C")</td>
                <td>@purchase.Suppliere</td> <!-- Assuming "Suppliere" is correct, change to Supplier if needed -->
                <td>@purchase.CreatedDate.ToString("g")</td>
                <td>@purchase.UpdatedDate.ToString("g")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@purchase.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@purchase.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
