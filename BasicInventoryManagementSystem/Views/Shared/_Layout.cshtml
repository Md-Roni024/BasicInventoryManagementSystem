@{
    ViewData["Title"] = "Home Page";
    bool isLoginPage = ViewData["IsLoginPage"] is bool ? (bool)ViewData["IsLoginPage"] : false;
    bool isRegisterPage = ViewData["IsRegisterPage"] is bool ? (bool)ViewData["IsRegisterPage"] : false;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BasicInventoryManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                @if (User.Identity?.IsAuthenticated == true && !isLoginPage && !isRegisterPage)
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="transactionDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Transaction
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="transactionDropdown">
                                    <li><a class="dropdown-item" asp-controller="Product" asp-action="Index">Products</a></li>
                                    <li><a class="dropdown-item" asp-controller="Sale" asp-action="Index">Sales</a></li>
                                    <li><a class="dropdown-item" asp-controller="Purchase" asp-action="Index">Purchase</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="reportDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Report
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="reportDropdown">
                                    <li><a class="dropdown-item" asp-controller="Report" asp-action="InventoryStatus">Inventory Report</a></li>
                                    <li><a class="dropdown-item" asp-controller="Report" asp-action="Sale">Sales</a></li>
                                    <li><a class="dropdown-item" asp-controller="Report" asp-action="Purchase">Purchase</a></li>
                                </ul>
                            </li>
                        </ul>
                        <div class="d-flex">
                            <form asp-controller="User" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-link nav-link text-dark">Logout</button>
                            </form>
                        </div>
                    </div>
                }

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @if (User.Identity?.IsAuthenticated == true && !isLoginPage && !isRegisterPage)
    {
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2024 - BasicInventoryManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
