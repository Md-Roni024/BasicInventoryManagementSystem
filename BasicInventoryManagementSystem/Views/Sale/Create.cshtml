@model BasicInventoryManagementSystem.Models.Sale

@{
    ViewData["Title"] = "Create Sale";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm" style="background-color:#eeeeee;">
                <div class="card-header bg-secondary text-white text-center">
                    <h2>Create Sale</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="ProductId" class="form-label">Product Name</label>
                            <select asp-for="ProductId" class="form-control" asp-items="@(new SelectList(ViewBag.Products, "Id", "Name"))">
                                <option value="">Select a product</option>
                            </select>
                            <span asp-validation-for="ProductId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryName" class="form-label">Category Name</label>
                            <select asp-for="CategoryName" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "CategoryName", "CategoryName"))">
                                <option value="">Select a category</option>
                            </select>
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label"></label>
                            <input asp-for="Quantity" class="form-control" placeholder="Enter quantity" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" class="form-control" placeholder="Enter price" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Seller" class="form-label"></label>
                            <input asp-for="Seller" class="form-control" placeholder="Enter seller's name" />
                            <span asp-validation-for="Seller" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Create</button>
                    </form>

                    <p class="mt-3 text-center">
                        <a asp-action="Index" class="text-primary">Back to List</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
