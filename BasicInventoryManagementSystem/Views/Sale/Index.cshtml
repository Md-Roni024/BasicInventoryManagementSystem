@model IEnumerable<BasicInventoryManagementSystem.Models.Sale>

@{
    ViewData["Title"] = "Sales List";
}

<h2>Sales List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Seller</th>
            <th>Created Date</th>
            <th>Updated Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>@sale.Product?.Name</td> <!-- Assuming Product has a Name property -->
                <td>@sale.CategoryName</td>
                <td>@sale.Quantity</td>
                <td>@sale.Price.ToString("C")</td>
                <td>@sale.Seller</td>
                <td>@sale.CreatedDate</td>
                <td>@sale.UpdatedDate</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@sale.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@sale.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Sale</a>
